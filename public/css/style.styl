html
  margin: 0
  padding: 0
body
  margin: 0
  padding: 0
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  color: #191919;

.container
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  display: flex
  flex-direction: column

.flexible-box
  display: flex
  align-items: center
  justify-content: center
  height: 100%

.join-form
  text-align: center
  input
    font-size: 35px
    width: 100%
    border: none
    border-bottom: 1px solid #EAEAEA
    padding-bottom: 10px

.error
  color: #EF4F3E
  display: block
  margin-top: 10px
